<!DOCTYPE html>
<html>
  <head>
    <title>Caroyal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- use bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- use locally hosted FontAwesome -->
    <script src="/fa-all.js"></script>

    <style type="text/css">
      .nav-burger {
        background: transparent;
        z-index: 4;
        height:100%;
        transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
        transition: 0.7s;
      }
      .nav-burger:hover {
        
        transform: rotate(-15deg);
        -webkit-transform: rotate(-15deg);
        transition: 1s;
      }
      .nav-burger-bg {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        z-index: 2;
        display: inline-block;
      }
      .nav-container {
        width: 6%;
        aspect-ratio: 1 / 1;
        margin: 20px;
        /*padding:0px;*/
        z-index: 2;
        position: fixed;
      }
      .logo-top {
        margin-top: 20px;
        margin-bottom: 20px;
        width: 28%;
        
      }

      .veil {
        background-color: black;
        z-index: 5;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        position: fixed;
        visibility: hidden;
        opacity: 0;
        top: 0px;
      }

      .veil-fadein {
        animation: fadeInFromNone 1s forwards;
      }
      .veil-fadeout {
        animation: fadeOutFrom 0.8s forwards;
      }
      @keyframes fadeInFromNone {
          0% {
              display: none;
              visibility: hidden;
              opacity: 0;
          }

          1% {
              display: block;
              visibility: visible;
              opacity: 0;
          }

          100% {
              display: block;
              visibility: visible;
              opacity: 0.6;
          }
      }

      @keyframes fadeOutFrom {
          0% {
              display: block;
              visibility: visible;
              opacity: 0.6;
          }

          99% {
              display: block;
              visibility: visible;
              opacity: 0;
          }

          100% {
              display: none;
              visibility: hidden;
              opacity: 0;
          }
      }

      .toast-container {
        position: fixed;
        z-index: 10;
        vertical-align: center;
        width:100%;
        top: 50%;
      }
      
      .footer {
        bottom: 0px;
        width: 100%;
        padding: 25px;
        /*position: fixed;*/
      }
      .main-content {
        margin-top: 30px;
        margin-bottom: 60px;
      }

      .white-text {
        color: white;
      }
      .blue-bg {
        background-color: #0B2C59;
      }
      .blue-text {
        color: #0B2C59;
      }
      .dark-blue-text {
        color: #051933;
      }
      .dark-blue-bg {
        background-color: #051933;
      }
      .gold-bg {
        background-color: #90855B;
      }
      .gold-text {
        color: #90855B;
      }
    </style>
    <script>
      function unveil(id) {
        var e = document.getElementById(id);
        e.classList.add('veil-fadeout');
      }
      function remove_toast(id) {
        var e = document.getElementById(id);
        e.classList.remove('show');
      }
    </script>
  </head>

  <body class="blue-bg">
      

    <%= render "nav_burger" %>
    <%= render "top_logo", color: "blue" %>
    
    
    <!-- main content -->  
    <div class="container-fluid white-text main-content">
      <div class="container-fluid row">
        <div class="col-md-3 col-sm-2"></div>
        <div class="col-md-6 col-sm-8">
          <%= yield %>
        </div>
        <div class="col-md-3 col-sm-0"></div>
      </div>
    </div>

    <%= render 'footer' %>


    <!-- pop-ups -->
    <div class="veil" id="veil" data-bs-dismiss="toast" onclick="unveil('veil'); remove_toast('notice-toast');"></div>
    <% if notice != nil then %>
      <%= render 'notice_toast' %>
    <% end %>
    <%= render 'nav_modal' %>
    
  </body>
</html>
