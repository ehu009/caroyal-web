<!DOCTYPE html>
<html>
  <head>
    <title>Caroyal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application" %>
    <!-- use bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- use locally hosted FontAwesome -->
    <script src="/fa-all.js"></script>

  </head>

  <body class="white-bg">
      

    <%= render "nav_burger" %>
    <%= render "nav_veil" %>
    
    <%= render "account_pill" %>
    
    <div class="fish-wall wall">
      <%= render "top_logo", present: true, color: 'white' %>

      <div class="container-fluid row" style="padding-bottom:25px;">
        <div class="col-md-3 col-sm-2"></div>
        <div class="col-md-6 col-sm-8 white-bg blurred-box" style="border-radius:25px;padding:25px;opacity:0.9">

          <%= yield %>
        </div>
      
        <div class="col-md-3 col-sm-0"></div>
      
      </div>
      
      
    </div>
<%= render 'footer' %>

    


    <!-- pop-ups -->
    <div class="veil" id="veil" data-bs-dismiss="toast" onclick="unveil('veil'); remove_toast('notice-toast');"></div>
    <% if notice != nil then %>
      <%= render 'notice_toast' %>
    <% end %>
    
  </body>
</html>
