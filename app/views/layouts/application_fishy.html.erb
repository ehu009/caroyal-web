<!DOCTYPE html>
<html>
  <head>
    <meta charset="ISO-8859-1">
    <title>Caroyal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%#= javascript_include_tag "application" %>
    
    <!-- use bootstrap 5 -->    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- use locally hosted FontAwesome -->
    <script src="/fa-all.js"></script>

    <%= render 'javascript' %>

  </head>

  <body class="white-bg">

    <%= render "nav" %>
    
    <div class="fish-wall wall">

        <div class="col-md-3 col-xs-2"></div>
        <div class="white-bg blurred-box input-form">

          <%= yield %>
        </div>
      
        <div class="col-md-3 col-xs-0"></div>
      
      
    </div>
<%= render 'footer' %>

    <!-- pop-ups -->
    <div class="veil" id="veil" data-bs-dismiss="toast" onclick="unveil('veil'); remove_toast('notice-toast');"></div>
    <% if notice != nil then %>
      <%= render 'notice_toast' %>
    <% end %>
    
  </body>
</html>
