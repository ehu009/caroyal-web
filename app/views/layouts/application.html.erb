<!DOCTYPE html>
<html>
  <head>
    <title>Caroyal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- use bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- use locally hosted FontAwesome -->
    <script src="/fa-all.js"></script>

    <style type="text/css">
      .nav-burger {
        font-size: 48px;
        margin: 14px;

        transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
        transition: 0.7s;
      }
      .nav-burger:hover {
        
        transform: rotate(-15deg);
        -webkit-transform: rotate(-15deg);
        transition: 1s;
      }
      .nav-container {
        z-index: 2;
        position: fixed;
      }
      .logo-top {
        margin-top: 5px;
        margin-bottom: 5px;
        width: 25%;
      }

      .veil {
        background-color: black;
        z-index: 3;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        position: fixed;
        visibility: hidden;
        opacity: 0;
      }

      .veil-fadein {
        animation: fadeInFromNone 1s forwards;
      }
      .veil-fadeout {
        animation: fadeOutFrom 0.8s forwards;
      }
      @keyframes fadeInFromNone {
          0% {
              display: none;
              visibility: hidden;
              opacity: 0;
          }

          1% {
              display: block;
              visibility: visible;
              opacity: 0;
          }

          100% {
              display: block;
              visibility: visible;
              opacity: 0.6;
          }
      }

      @keyframes fadeOutFrom {
          0% {
              display: block;
              visibility: visible;
              opacity: 0.6;
          }

          99% {
              display: block;
              visibility: visible;
              opacity: 0;
          }

          100% {
              display: none;
              visibility: hidden;
              opacity: 0;
          }
      }

      .toast-container {
        position: fixed;
        z-index: 4;
        vertical-align: center;
        width:100%;
        top: 50%;
      }

      .white-text {
        color: white;
      }
      .blue-bg {
        background-color: #0B2C59;
      }
      .blue-text {
        color: #0B2C59;
      }
      .dark-blue-text {
        color: #051933;
      }
      .dark-blue-bg {
        background-color: #051933;
      }
      .gold-bg {
        background-color: #90855B;
      }
      .gold-text {
        color: #90855B;
      }
    </style>
    <script>
      function unveil(id) {
        var e = document.getElementById(id);
        e.classList.add('veil-fadeout');
      }
    </script>
  </head>

  <body>
    <div class="veil" id="veil"></div>
    <div class="container-fluid blue-bg white-text">
      
      <div class="col-1 nav-container">
          <i class="fa-solid fa-bars nav-burger white-text" data-bs-toggle="modal" data-bs-target="#navModal"></i>
      </div>
    
      <div class="container-fluid text-center">
          <img class="logo-top" src="/Caroyal transparent PNG-02.png">
      </div>
    </div>
    <div class="container-fluid blue-bg white-text">  
    
      <div class="container-fluid row">
        <div class="col-md-3 col-sm-2"></div>
        <div class="col-md-6 col-sm-8">
          <%= yield %>
        </div>
        <div class="col-md-3 col-sm-2"></div>
      </div>
    </div>

    <% if notice != nil then %>
    <div class="container-fluid row toast-container">
      <div class="col-sm-3 col-md-4"></div>

      <div class="col-sm-6 col-md-4">
        <div class="toast show" width="100%">
          <div class="toast-header">
            <b class="dark-blue-text">Notice</b>
            <button type="button" class="btn-close" data-bs-dismiss="toast" onclick="unveil('veil');"></button>
          </div>
          <div class="toast-body">
            <%= notice %>
          </div>
        </div>
      
      </div>
    </div>
    <script >
      var p = document.getElementById('veil');
      p.classList.add("veil-fadein");
    </script>
    <% end %>


    <div class="modal fade" id="navModal">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h4 class="modal-title">Navigation</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body blue-text">
            <ul>
                
                <li data-bs-dismiss="modal"><%= link_to "About us", root_path + '#about' %>
                </li>
                <li data-bs-dismiss="modal"><%= link_to "Our products", root_path + '#products' %>
                </li>
                <li data-bs-dismiss="modal"><%= link_to "Contact us", root_path + '#contact' %>
                </li>
                <li data-bs-dismiss="modal"><%= link_to "Log in", login_path %>
                </li>
                <li data-bs-dismiss="modal"><%= link_to "New user", new_user_path %>
                </li>
                <!--
                <li>
                </li>
                <li>
                </li>
                -->
            </ul>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn blue-bg white-text" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
