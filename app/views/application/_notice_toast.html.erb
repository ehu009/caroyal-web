
<div class="notice-toast-container">
  <div class="container-fluid row">
      
    <div class="col-sm-3 col-md-4"></div>

    <div class="col-sm-6 col-md-4">
      <div class="toast notice-toast show" id="notice-toast">
        <div class="toast-header" style="background-color: #051933; color: white;">
          <b class="">Notice</b>
          <button type="button" class="btn-close" data-bs-dismiss="toast" onclick="unveil('veil');" style="background-color:white"></button>
        </div>
        <div class="toast-body">
          <% if notice.is_a?(Hash) then %>
          <% notice.each do |k, v| %>
          <b><%= k %></b>: 
          <% plural = (v.length > 1)%>
          <% v.each do |err| %>
          <%= err %><% if plural %>,&nbsp;<% end %>
          <% end %>
          <br>
          <% end %>
          <% else %>
          <%= notice %>
          <% end %>

        </div>    
      </div>
    </div>
  </div>
</div>
<script >
    var p = document.getElementById('veil');
    p.classList.add("veil-fadein");
</script>
