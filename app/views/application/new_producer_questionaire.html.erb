      <div class="col-lg-8 col-xs-12 col-sm-4">
        <%= f.check_box :pays_deposit %>
      </div>
      <div class="col-md-4">
        Bank wire: 
      </div>
      <div class="col-md-8">
        <%= f.check_box :pays_wire %>
      </div>
      <div class="col-md-4">
        Card payment: 
      </div>
      <div class="col-md-8">
        <%= f.check_box :pays_card %>
      </div>
      <div class="col-md-4">
        Cryptocurrency: 
      </div>
      <div class="col-md-8">
        <%= f.check_box :pays_crypto %>
      </div>
      <div class="col-md-12 text-center">
        <%= f.submit  "Submit producer questionaire", class: "form-btn white-text blue-bg" %>
      </div>
    </div>
  </p>
      
  <% end %>
  <hr class="white-text">
</p>
