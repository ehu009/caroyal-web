        </div>
        
        <div class="col-md-3 col-sm-6 form-field">
            <%= f.label :distributor %>
        </div>
        <div class="col-md-3 col-sm-6 form-field">
            <%= f.check_box :distributor, checked: session[:create_params]["distributor"], class: "form-check-input" %>
        </div>
        
    
    </p>
    <hr class="dark-blue-text">
    
