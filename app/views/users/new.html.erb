        </div>
        <div class="col-md-4 col-sm-12 form-field">
            <%= f.label :email %>
        </div>
        <div class="col-md-8 col-sm-12 form-field">
            <%= f.text_field :email, value: session[:create_params]["email"], style: "width:100%;" %>
        </div>
        <div class="col-md-4 col-sm-12 form-field">
