<h2>
    Editing account information
</h2>

<p>
    <h5>Change login information</h5>
    <br>
    <%= form_for @user do |f| %>
    <div class="container-fluid row">
        <div class="col-md-4 col-sm-12 form-field">
            <%= f.label :phone_number %>
        </div>
        <div class="col-md-8 col-sm-12 form-field">
            <%= f.number_field :phone_number, style: "width:100%;", class: "hidden-arrows" %>
        </div>
        
        <div class="col-md-4 col-sm-0">
        </div>
        <div class="col-md-8 col-sm-12">
            <%= f.submit  "Update phone number", class: "form-btn white-text blue-bg" %>
        </div>
    </div>
    <% end %>

    <hr class="white-text">
</p>

<p>
    <h5>Change password</h5>
    <br>
    <%= form_for @user do |f| %>
    <div class="container-fluid row">
        <div class="col-md-4 col-sm-12 form-field">
            <%= f.label :password %>
        </div>
        <div class="col-md-8 col-sm-12 form-field">
            <%= f.password_field :password, style: "width:100%" %>
        </div>
        <div class="col-md-4 col-sm-0">
        </div>
        <div class="col-md-8 col-sm-12">
            <%= f.submit  "Update password", class: "form-btn white-text blue-bg" %>
        </div>
    </div>
    <% end %>

    <hr class="white-text">
</p>




<%= form_for @user do |f| %>
<div class="container-fluid row">
<p> 


<h5>Business details</h5>

<p>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :company_name %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :company_name, style: "width:100%;" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :company_address %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :company_address, style: "width:100%;" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :tax_identification_number, "TIN (tax ID)" %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.number_field :tax_identification_number, style: "width:100%;", class: "hidden-arrows" %>
    </div>
    <div class="col-md-3 col-sm-6">
        <%= f.label :producer %>
    </div>
    <div class="col-md-3 col-sm-6">
        <%= f.check_box :producer, class: "form-check-input" %>
    </div>
    
    <div class="col-md-3 col-sm-6">
        <%= f.label :distributor %>
    </div>
    <div class="col-md-3 col-sm-6">
        <%= f.check_box :distributor, class: "form-check-input" %>
    </div>
    
    
    </p>
<hr class="white-text">
<h5>Personal details</h5>
<p>

    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :name_prefix %>
        <span style="right:0px; color: red">*</span>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.select :name_prefix, ["Mr", "Mrs", "Ms"] %>
    </div>
    
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :first_name %>
        <span style="right:0px; color: red">*</span>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :first_name, style: "width:100%;" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :last_name, "Surname"%>
        <span style="right:0px; color: red">*</span>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :last_name, style: "width:100%;" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :date_of_birth %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.date_field :date_of_birth %>
    </div>

    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :email %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :email, style: "width:100%" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :address %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :address, style: "width:100%;" %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :country %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.country_select :country, include_blank: 'Select a country' %>
    </div>
    <div class="col-md-4 col-sm-12 form-field">
        <%= f.label :city %>
    </div>
    <div class="col-md-8 col-sm-12 form-field">
        <%= f.text_field :city %>
    </div>



</p>
    <p>
        <div class="col-md-4 col-sm-0">
        </div>
        <div class="col-md-8 col-sm-12">
            <%= f.submit  "Update account information", class: "form-btn white-text blue-bg" %>
        </div>
        </div>
        <hr class="white-text">
    </p>
<% end %>
</p>

<p>
<h5>
    Account deletion
    </h5>
    <br>
    
    <%= form_for @user, method: :delete do |f| %>
    <div class="container-fluid row">
        <div class="col-md-4 col-sm-6">
            <label for="confirm-delete"> Confirm deletion </label>
        </div>
        <div class="col-md-8 col-sm-6">
            <input type="checkbox" id="confirm-delete" name="confirm_deletion" class="form-check-input">
        </div>

        <div class="col-md-4 col-sm-0">
        </div>
        <div class="col-md-8 col-sm-12">
            <%= f.submit "Destroy user account", class: "account-delete-btn white-text blue-bg form-btn" %>
        </div>
    </div>
    <% end %>
    
</p>